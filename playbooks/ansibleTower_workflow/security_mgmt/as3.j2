{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.2.0",
        "id": "exampleid",
        "label": "example label",
        "remark": "example remark",
        "secure":{
            "class": "Tenant",
            "web_app": {
                "class": "Application",
                "template": "https",
                "serviceMain": {
                    "class": "Service_HTTPS",
                    "virtualAddresses": [
                        "{{ vip_ip }}"
                    ],
                    "virtualPort": 443,
                    "pool": "app_pool",
                    "serverTLS": "as3_webtls",
                    "snat": "auto"
                },
                "as3_webtls": {
                    "class": "TLS_Server",
                    "certificates": [
                        {
                            "certificate": "as3_webcert"
                        }
                    ]
                },
                "as3_webcert": {
                    "class": "Certificate",
                    "certificate": "{{certificate}}",
                    "privateKey": "{{private_key}}"
                },
                "app_pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ]
                }
            }
        }
    }
}
